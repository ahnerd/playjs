                new Control({
                    dom: 'p1'  ,
                    
                   dock: 'top',
                     
              anchor: 'right'
                    
               // margin: 60,
                   
              //     padding: 30
                }),
                
                new Control({
                    dom: 'p2'  ,
					
					dock: 'top',
                    
					anchor: 'right'
                    
                   //  anchor: 'right'
                    
                }),
                
                new Control({
                    dom: 'p3',
                    
                      anchor: '346',
                      
