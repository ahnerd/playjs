<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<title>Pyjs 测试</title>
		<link href="../../py/resources/hust/starmarker.css" rel="stylesheet" type="text/css" />
		<script src="../../py/py.js" type="text/javascript"></script>
		<script src="../../py/System/Dom/Element.js" type="text/javascript"></script>
		<script src="../../py/hust/StarMarker.js" type="text/javascript"></script>
		
        <script>
        	document.ready(function(){
				a = new StarMarker({
					renderTo:$('star'),  // 直接即可， 如果需要渲染到 document.body ，可以使用 true 或 undefined
					// 因为脚本执行这句时，没有 document.body
					
					onvaluechanged:function(v){
                       $('result').innerHTML=v+"星级";
				     }
				 });
				
				b = new StarMarker({
					renderTo:$('star'),  // 直接即可， 如果需要渲染到 document.body ，可以使用 true 或 undefined
					// 因为脚本执行这句时，没有 document.body
					
					onvaluechanged:function(v){
                       $('result').innerHTML=v+"星级";
				     }
				 });
				
				new StarMarker({target:$('star'),change:function(v){
                   $('result').innerHTML=v+"星级";
				}});
			});
        </script>
	</head>
	<body style="padding:100px;">
	<div id="star"><div id="result" style="background: blue;"></div></div>  <!--   star   被  result    挡    star-div  应该内联  且有高度。 
	 这是一个长方形的控件 ， 不占满整个
	   -->
	
	<div></div>
	<br>
	<div id="star1" style=""><div id="result1"></div></div>
	
